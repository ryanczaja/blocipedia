<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if current_user.role == 'member' %>
    <h4><%= "Membership : Member" %></h4>
  <% elsif current_user.role == 'premium_member' %>
    <h4><%= "Membership : Premium Member" %></h4>
  <% elsif current_user.role == 'moderator' %>
    <h4><%= "Membership : Moderator" %></h4>
  <% else %>
    <h4><%= "Membership : Admin" %></h4>
  <% end %>

  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="control-group">
      <p>Currently waiting confirmation for:</p>
      <div class="controls">
       <%= resource.unconfirmed_email %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :password, class: 'control-label' %>
    <div class="control"> 
      <%= f.password_field :password, :autocomplete => "off" %>
      <i>(leave blank if you don't want to change it)</i>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: 'controls' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <br /><br /><div class="control-group">
    <%= f.label :current_password, class: 'controls' %> 
    <div class="controls">
      <%= f.password_field :current_password %>
      <i>(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update", class: 'btn' %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div class="horizontal-form">
  <div class="control-group">
    <div class="controls">
      <p> 
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-small' %>
      </p>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>
