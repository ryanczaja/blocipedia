<h1> <%= markdown @wiki.title %> </h1>

<% if can? :edit, @wiki %>
	<%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-mini' %>
<% end %>

<% if can? :destroy, @wiki %>
	<%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-small btn-danger', confirm: 'Are you sure you want to delete this Wiki?' %>
<% end %>

<p> <%= markdown @wiki.body %> </h1>
