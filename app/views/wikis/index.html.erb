<h1>My Wikis or Wiki Subjects</h1>

<div class="row">
	<div class="span8">
		<% @wikis.each do |wiki| %>
			<div class="media">
				<div class="media-body">
					<h4 class="media-heading">
						<%= link_to (markdown wiki.title), wiki %>
					</h4>
					<small>
						submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name if wiki.user %>
					</small>
				</div>
			</div>
		<% end %>
	</div>
	<div class="span4">
		<% if can? :create, Wiki %>
			<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-large btn-block' %>
		<% end %>
	</div>
</div>
